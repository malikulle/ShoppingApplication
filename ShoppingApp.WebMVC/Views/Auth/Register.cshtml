@model UserRegisterDto
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Hesap Oluştur</h3></div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputFirstName">Ad</label>
                                    <input class="form-control py-4" id="inputFirstName" type="text" placeholder="İsiminizi Giriniz." asp-for="FirstName"/>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputLastName">Soyad</label>
                                    <input class="form-control py-4" id="inputLastName" type="text" placeholder="Soyadınızı Giriniz." asp-for="LastName" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="inputEmailAddress">Email</label>
                            <input class="form-control py-4" id="" type="email" aria-describedby="emailHelp" placeholder="Email Adresinizi Giriniz" asp-for="Email"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputPassword">Parola</label>
                                    <input class="form-control py-4" id="inputPassword" type="password" placeholder="Parolanızı Giriniz." asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputConfirmPassword">Onay Parola</label>
                                    <input class="form-control py-4" id="inputConfirmPassword" type="password" placeholder="Parolanızı Tekrar Giriniz" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-4 mb-0"><button type="submit" class="btn btn-primary btn-block btnSave">Hesap Oluştur</button></div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a asp-controller="Auth" asp-action="Login">Hesabınız Var mı? Giriş Yapın.</a></div>
                </div>
            </div>
        </div>
    </div>
</div>