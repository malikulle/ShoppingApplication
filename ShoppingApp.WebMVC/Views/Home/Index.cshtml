@model ShoppingApp.WebMVC.Models.ProductListModel
<!-- sidebar start -->
<div id="sidebar" class="col-md-3">

    @await Component.InvokeAsync("CategoryList")

    @await Component.InvokeAsync("FeaturedProductList")

</div>
<!-- sidebar end -->
<!-- right column start -->
<div class="col-md-9">

    <div class="row">

        <div class="col-md-12 wow fadeIn">
            <div class="row product-results">
                <div class="product-results">
                    <div class="col-xs-8">
                        <p class="woocommerce-result-count">Showing 1–3 of @Model.PageInfo.TotalItems results</p>
                    </div>
                </div>
            </div>
        </div>



        @foreach (var item in Model.Products)
        {
            <partial name="_product" for="@item" />
        }

        <div class="col-md-12 wow fadeIn">
            <div id="pagination" class="row text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="disabled">
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.PageInfo.TotalPages(); i++)
                        {
                            <li class="@(i == Model.PageInfo.CurrentPage ? "active" :"")"><a href="/?page=@i">@i</a></li>
                        }
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>
<!-- right column end -->