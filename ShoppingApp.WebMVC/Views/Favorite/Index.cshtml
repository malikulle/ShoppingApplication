@model IList<Favorite>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-md-4 wow fadeInUp">
        <div class="text-center product-item">
            <div class="product-item-top">
                <img alt="" class="img-responsive" src="~/images/@item.Product.ImageUrl">
                <div class="mask"></div>
                <ul class="list-unstyled list-inline">
                    <li><a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Product.Id" ><i class="fa fa-link fa-fw"></i></a></li>
                    <li><a asp-controller="Carts" asp-action="AddToCart" asp-route-productId="@item.Product.Id"><i class="fa fa-cart-plus fa-fw"></i></a></li>
                </ul>
            </div>
            <div class="product-item-inner">
                <h3 class="product-title"><a  asp-controller="Product" asp-action="Detail" asp-route-id="@item.Product.Id" >@item.Product.Name</a></h3>
            </div>
        </div>
    </div>
}

