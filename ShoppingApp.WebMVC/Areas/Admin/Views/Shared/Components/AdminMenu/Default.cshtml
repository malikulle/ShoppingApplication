@model ShoppingApp.WebMVC.Areas.Admin.Models.UserWithRolesViewModel

<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">Core</div>
                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Dashboard
                </a>


                @if (Model.Roles.Any(x => x.Equals("Admin")))
                {
    <a class="nav-link" asp-controller="Category" asp-action="Index" asp-area="Admin">
        <div class="sb-nav-link-icon"><i class="fas fa-th-list"></i></div>
        Kategoriler

    </a>
                    <a class="nav-link" asp-controller="Products" asp-action="Index" asp-area="Admin">
                        <div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
                        Ürünler
                    </a>}



                <a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-comments"></i></div>
                    Siparişler
                </a>
                @if (Model.Roles.Any(x => x.Equals("Admin")))
                {
    <a class="nav-link" asp-controller="Users" asp-action="Index" asp-area="Admin">
        <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
        Diğer Kullanıcılar
    </a>}

            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Logged in as:</div>
            @Model.User.FirstName @Model.User.LastName
        </div>
    </nav>
</div>